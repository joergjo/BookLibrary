{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceRoot}/BookLibrary-NetCore.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/BookLibrary.Test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "minify",
            "command": "node_modules/.bin/gulp",
            "type": "shell",
            "args": [
                "min"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/BookLibrary"
            },
            "group": "build"
        },
        {
            "label": "yarn install",
            "command": "yarn",
            "type": "shell",
            "args": [
                "install"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/BookLibrary"
            },
            "group": "build"
        }
    ]
}