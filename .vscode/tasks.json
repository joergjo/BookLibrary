{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceRoot}/BookLibrary-NetCore.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "-l",
                "trx"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/test/BookLibrary.Test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "show test results",
            "command": "t-rex",
            "type": "process",
            "args": [
                "--path",
                "TestResults"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/test/BookLibrary.Test"
            },
            "presentation": {
                "clear": true
            },
            "group": "test"
        },
        {
            "label": "minify",
            "command": "node_modules/.bin/gulp",
            "type": "shell",
            "args": [
                "min"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/src/BookLibrary"
            },
            "group": "build"
        }
    ]
}