{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location of the resources."
      },
      "defaultValue": "westeurope"
    },
    "mongoUrl": {
      "type": "securestring",
      "metadata": {
        "description": "MongoDB URL connection string."
      }
    },
    "logLevel": {
      "type": "string",
      "allowedValues": [
        "Trace",
        "Debug",
        "Information",
        "Warning",
        "Error",
        "Critical"
      ],
      "metadata": {
        "description": "Default log level for application logging."
      },
      "defaultValue": "Information"
    }
  },
  "resources": [
    {
      "apiVersion": "2018-07-01-preview",
      "name": "bookLibraryNetwork",
      "type": "Microsoft.ServiceFabricMesh/networks",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "addressPrefix": "10.0.0.4/22",
        "ingressConfig": {
          "layer4": [
            {
              "name": "webIngress",
              "publicPort": "80",
              "applicationName": "bookLibraryApp",
              "serviceName": "web",
              "endpointName": "webListener"
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2018-07-01-preview",
      "name": "bookLibraryApp",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/bookLibraryNetwork"
      ],
      "properties": {
        "description": "Book Library .NET Core in Mesh",
        "services": [
          {
            "type": "Microsoft.ServiceFabricMesh/services",
            "location": "[parameters('location')]",
            "name": "web",
            "properties": {
              "description": "Book Library Web API.",
              "osType": "linux",
              "codePackages": [
                {
                  "name": "code",
                  "image": "joergjo/booklibrary-netcore:latest",
                  "endpoints": [
                    {
                      "name": "webListener",
                      "port": "80"
                    }
                  ],
                  "environmentVariables": [
                    {
                      "name": "ConnectionStrings__DefaultConnection",
                      "value": "[parameters('mongoUrl')]"
                    },
                    {
                      "name": "Logging__LogLevel__Default",
                      "value": "[parameters('logLevel')]"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'bookLibraryNetwork')]"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}